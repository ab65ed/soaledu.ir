  "author": "SoalEdu Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/soaledu/lovable-converter.git"
  },
  "bugs": {
    "url": "https://github.com/soaledu/lovable-converter/issues"
  },
  "homepage": "https://github.com/soaledu/lovable-converter#readme",
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "prompt-template.md"
